<Window x:Class="CheckInSystem.Views.Dialog.EditOffsiteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CheckInSystem.Views.Windows"
        mc:Ignorable="d"
        Title="EditOffsite" Height="200" Width="230"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="På orlov"/>
                <CheckBox x:Name="CbIsOffsite"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="På orlov indtil"/>
                <DatePicker x:Name="DpOffsiteUntil"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button IsDefault="True"
                        Content="Bekræft"
                        Click="BtnConfrimed" 
                        MinWidth="60" 
                        Margin="0,0,10,0"/>
                <Button IsCancel="True" MinWidth="60" Content="Annuller"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
